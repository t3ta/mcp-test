    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "testing",
    "e2e",
    "model-context-protocol"
  ],
  "author": "t3ta",
  "license": "MIT",
  "peerDependencies": {
    "vitest": "^1.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsup": "^7.0.0",
    "eslint": "^8.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  }
}
